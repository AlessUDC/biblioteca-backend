generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EstadoPrestamo {
  ACTIVO
  DEVUELTO
  PERDIDO
}

enum EstadoEjemplar {
  DISPONIBLE
  PRESTADO
  REPARACION
  PERDIDO
  NO_DISPONIBLE
}

model Facultad {
  facultadId Int       @id @default(autoincrement())
  nombre     String

  escuelas   Escuela[]
}

model Escuela {
  escuelaId  Int       @id @default(autoincrement())
  nombre     String
  facultadId Int

  facultad   Facultad  @relation(fields: [facultadId], references: [facultadId])
  estudiantes Estudiante[]
}

model Estudiante {
  estudianteId     Int       @id @default(autoincrement())
  tipoDocumento    String
  numeroDocumento  String    @unique
  nombre           String
  apellidoPaterno  String
  apellidoMaterno  String
  escuelaId        Int
  activo           Boolean   @default(true)
  sanciones        Int       @default(0)

  escuela          Escuela   @relation(fields: [escuelaId], references: [escuelaId])
  prestamos        Prestamo[]
}

model Bibliotecario {
  bibliotecarioId     Int       @id @default(autoincrement())
  nombre              String
  apellidoPaterno     String
  apellidoMaterno     String

  prestamos           Prestamo[]
}

model Categoria {
  categoriaId Int       @id @default(autoincrement())
  nombre      String

  libros      Libro[]
}

model Editorial {
  editorialId Int       @id @default(autoincrement())
  nombre      String

  libros      Libro[]
}

model Autor {
  autorId          Int       @id @default(autoincrement())
  nombre           String?
  apellidoPaterno  String?
  apellidoMaterno  String?
  nacionalidad     String?
  ORCID            String?   @unique

  libros           LibroAutor[]
}

model Libro {
  codigoLibro Int       @id @default(autoincrement())
  nombre      String
  categorias  Categoria[]
  editoriales Editorial[]
  autores     LibroAutor[]
  ejemplares  Ejemplar[]
}

model LibroAutor {
  libroId Int
  autorId Int

  libro   Libro @relation(fields: [libroId], references: [codigoLibro])
  autor   Autor @relation(fields: [autorId], references: [autorId])

  @@id([libroId, autorId])
}

model Ejemplar {
  ejemplarId         Int            @id @default(autoincrement())
  codigoLibro        Int
  ubicacion          String
  codigoBarras       String?        @unique
  estado             EstadoEjemplar @default(DISPONIBLE)

  libro     Libro      @relation(fields: [codigoLibro], references: [codigoLibro])
  prestamos Prestamo[]
}

model Prestamo {
  prestamoId        Int            @id @default(autoincrement())
  estudianteId      Int
  bibliotecarioId   Int
  ejemplarId        Int
  fechaPrestamo     DateTime       @default(now())
  fechaLimite       DateTime       // Fecha máxima de devolución (Deadline)
  fechaDevolucion   DateTime?
  estadoPrestamo    EstadoPrestamo

  estudiante        Estudiante     @relation(fields: [estudianteId], references: [estudianteId])
  bibliotecario     Bibliotecario  @relation(fields: [bibliotecarioId], references: [bibliotecarioId])
  ejemplar          Ejemplar       @relation(fields: [ejemplarId], references: [ejemplarId])
}
